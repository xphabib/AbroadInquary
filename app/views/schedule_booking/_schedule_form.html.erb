        </div>
      </div>

      <div class="col-lg-12 u-mb-xsmall">
        <div class="c-field">
          <label class="c-field__label" for="input1">Phone</label>
          <%= text_field_tag 'schedules[user_phone_no]', nil, class: "c-input", placeholder: 'Write in a short text' %>
