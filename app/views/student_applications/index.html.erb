<p id="notice"><%= notice %></p>
<div class="container">


<h1>Student Applications</h1>

<table class="table table-bordered ">
  <thead>
    <tr>
      <th>Country</th>
      <th>Desire program</th>
      <th>Passport file</th>
      <th>Motivation letter</th>
      <th>Recommendation letter</th>
      <th>Student</th>
      <th>Mentor</th>
      <th>University name</th>
      <th>Application status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_applications.each do |student_application| %>
      <tr>
        <td><%= student_application.country_id %></td>
        <td><%= student_application.desire_program %></td>
        <td><%= student_application.passport_file %></td>
        <td><%= student_application.motivation_letter %></td>
        <td><%= student_application.recommendation_letter %></td>

        <td><%= student_application.student_id %></td>
        <td><%= student_application.mentor_id %></td>
        <td><%= student_application.university_name %></td>
        <td><%= student_application.application_status %></td>
        <td><%= link_to 'Show', student_application %></td>
        <td><%= link_to 'Edit', edit_student_application_path(student_application) %></td>
        <td><%= link_to 'Destroy', student_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student Application', new_student_application_path %>
</div>