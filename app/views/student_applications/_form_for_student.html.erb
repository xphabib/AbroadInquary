<div class="row">
  <div class="col-12">
    <div class="row u-mb-medium">
      <div class="col-12">
        <div class="c-card">

          <%= form_with(model: student_application, local: true) do |form| %>
            <% if student_application.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(student_application.errors.count, "error") %> prohibited this student application from being saved:</h2>

                <ul>
                  <% student_application.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <%= hidden_field 'student_application[student_id]', current_user.id %>
            <div class="row u-mb-medium">
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">Country</label>
                  <%= form.select :country_id, options_for_select(Country.all.map{ |country| [country.name,country.id] }, :selected => form.object.country_id), {prompt: 'Select Country'}, {class: 'c-input'} %>
                </div>
              </div>

              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">Desire Program</label>
                  <%= form.text_field :desire_program, placeholder: 'Program Name', class: "c-input" %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">Passport File</label>
                  <%= form.file_field :passport_file ,class: "c-input" %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">Motivation Letter</label>
                  <%= form.file_field :motivation_letter ,class: "c-input" %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">Recommendation Letter</label>
                  <%= form.file_field :recommendation_letter ,class: "c-input" %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">CV</label>
                  <%= form.file_field :cv ,class: "c-input" %>
                </div>
              </div>

              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">Police Clearance Certificate</label>
                  <%= form.file_field :police_clearance_certificate ,class: "c-input" %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">Birth Certificate</label>
                  <%= form.file_field :birth_certificate ,class: "c-input" %>
                </div>
              </div>

              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">Bank Statement</label>
                  <%= form.file_field :bank_statement ,class: "c-input" %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">Bank Solvency Certificate</label>
                  <%= form.file_field :bank_solvency_certificate ,class: "c-input" %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">Mentor</label>
                  <%= form.select :mentor_id, options_for_select(User.mentor.map{ |mentor| [mentor.full_name, mentor.id] }, :selected => form.object.mentor_id), {prompt: 'Select Mentor'}, {class: 'c-input'} %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">University Name</label>
                  <%= form.text_field :university_name, placeholder: 'University Name', class: "c-input" %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">Application Status</label>
                  <%= form.select :application_status, options_for_select(StudentApplication::APPLICATION_STATUS), {prompt: 'Select Status'}, {class: 'c-input'} %>
                </div>
              </div>
            </div>
            <div class="c-field">
              <%= link_to 'Cancel', student_applications_path, class: "c-btn c-btn--secondary u-mb-xsmall" %>
              <%= form.submit class: "c-btn c-btn--secondary u-mb-xsmall" %>
            </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>









