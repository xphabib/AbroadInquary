    <div class="row courses-item-content">
      <% @countries.first(3).each do |country| %>
        <div class="col-lg-4 col-sm-6 design photography">
          <!--Single Course Item Start-->
          <div class="single-course-item border-radius">
            <div class="course-content">
              <h2>
                <%= link_to country.name, mentor_schedules_path(country: country.id) %>
                <!--                <a href="#"><%#= country.name %></a>-->
              </h2>
              <!--              <p>Consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna</p>-->
              <% if country.users.present? %>
                <div class="trainer-profile clearfix">

                  <%= image_tag "author/author-1.jpg", class: "rounded-circle", alt: "img" %>
                  <div class="trainer-info">
                    <h3><%= country.users.mentors.first.full_name %></h3>
                    <p><%= country.users.mentors.first.dob %></p>
                  </div>
                  <div class="course-cat text-capitalize text-right">
                    <!--                            <a href="courses.html#">Schedules</a>-->
                    <%= link_to user_path(country.users.mentors.first) do %>
                      Schedules
                    <% end %>
                  </div>
                </div><!--/.trainer-profile-->
              <% end %>
            </div><!--/.course-content-->
          </div><!--/.single-course-item-end-->
        </div><!--/.col-lg-4-->
      <% end %>
    </div><!--/.row-->
    <div class="row">
      <div class="col-lg-12">
        <div class="group-btn text-center">
          <a href="/users/sign_up" class="btn btn-default btn-primary">Apply for Study Abroad</a>
          <a href="#" class="btn btn-default">Apply with Scholarship</a>
        </div><!--/.form-group-btn-->
      </div><!--/.col-lg-12-->
    </div><!--/.row-->
  </div><!--/.container-->
</section><!--/#courses-section-->

