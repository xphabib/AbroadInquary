<% content_for :header_for_mentor do %>
  <header class="c-navbar u-mb-medium">
    <h2 class="c-navbar__title">Abroad Inquiry</h2>
  </header>
<% end %>

<div class="row u-mt-xlarge#">
  <div class="col-12">
    <h3 class="u-mb-small">Mentor Request</h3>
  </div>
</div>
<%= render 'mentor_requirments' %>
<br>
<div class="row">
  <div class="col-12">
    <div class="row u-mb-medium">
      <div class="col-12">
        <div class="c-card">
          <%= form_for @user, url: create_request_for_new_mentorship_path, method: :post, multiple: true do |f| %>

            <div class="row u-mb-medium">
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">First Name</label>
                  <%= f.text_field :first_name, placeholder: :first_name, class: 'c-input', required: true %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input2">Last Name</label>
                  <%= f.text_field :last_name, placeholder: :last_name, class: 'c-input', required: true %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input3">Phone</label>
                  <%= f.text_field :phone, placeholder: :phone, class: 'c-input', required: true %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input3">Email</label>
                  <%= f.email_field :email, placeholder: :email, class: 'c-input', required: true %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input3">Password</label>
                  <%= f.password_field :password, placeholder: :password, class: 'c-input', required: true %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input3">University</label>
                  <%= f.text_field :university, placeholder: :university, class: 'c-input', required: true %>
                </div>
              </div>
<!--              <div class="col-lg-3 u-mb-xsmall">-->
<!--                <div class="c-field">-->
<!--                  <label class="c-field__label" for="input3">City Name</label>-->
                  <%#= f.text_field :city_name, placeholder: :city_name, class: 'c-input' %>
<!--                </div>-->
<!--              </div>-->
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input3">Current Country</label>
                  <%= f.select :country_id, @countries.collect{|c| [c.name, c.id]}, {prompt: "Select Country",}, {class: 'c-input', required: true} %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input3">CGPA</label>
                  <%= f.text_field :cgpa, placeholder: :cgpa, class: 'c-input', required: true %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input3">Current Occupation</label>
                  <%= f.text_field :occupation, placeholder: :occupation, class: 'c-input', required: true %>
                </div>
              </div>
              <div class="col-lg-3 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input3">Image</label>
                  <%= f.file_field :image, placeholder: :image, class: 'c-input', required: true %>
                </div>
              </div>
            </div>

            <div class="row u-mb-medium">
              <div class="col-lg-12 u-mb-xsmall">
                <div class="c-field">
                  <label class="c-field__label" for="input1">About yourself</label>
                  <%= f.text_area :about, class: 'c-input', required: true %>
                </div>
              </div>
            </div>


            <div class="c-field">
              <%= link_to 'Cancel', root_path, class: "c-btn c-btn--secondary u-mb-xsmall" %>
              <%= f.submit 'Sign up', class: "c-btn c-btn--secondary u-mb-xsmall" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>