<section class="page-heading-section before-bg bg-image" style="background-image: url(<%= asset_path('header/p-header3.jpg') %>);">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="page-heading">
          <h2 class="page-name text-capitalize">login</h2>
        </div><!--/.page-heading-->
      </div><!--/.col-md-12-->
    </div><!--/.row-->
  </div><!--/.container-->
</section><!--/.page-heading-area-->


<div class="login-page page-wrapper s-pd100">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-4 col-md-6 col-sm-8">
        <div class="login-form-area">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div id="socila-login" class="social-login-area">
              <a class="facebook" href="#"><i class="fa fa-facebook"></i></a>
              <a class="twitter" href="#"><i class="fa fa-twitter"></i></a>
              <a class="google" href="#"><i class="fa fa-google-plus"></i></a>
              <a class="linkedin" href="#"><i class="fa fa-linkedin"></i></a>
            </div>
            <div class="divider-or text-center">
              <span>or</span>
            </div>
            <p>
              <%= f.email_field :email, autofocus: true, autocomplete: "Username / Email", class: "form-control", id: "user_login" %>
            </p>
            <p>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "user_pass", placeholder: "Password" %>
            </p>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            <p>
              <%= f.submit "Log In Your Account", class: "btn btn-default btn-primary" %>
            </p>
            <div class="login-form-remember">
              <label>
                <input type="checkbox" id="rememberme" value="">
                Keep me signed in until I sign out</label>
            </div>
            <div class="login-form-register-now"><p>Not yet a member? <%= link_to "REGISTER NOW", new_registration_path(resource_name) %></p></div>
          <% end %>
        </div><!--/.login-form-area-->
      </div><!--/.col-lg-4-->
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.login-page-->
