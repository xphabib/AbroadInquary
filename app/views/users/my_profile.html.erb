<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div class="c-alert c-alert--info u-mb-medium">
                <span class="c-alert__icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check"><polyline points="20 6 9 17 4 12"></polyline></svg>
                </span>

        <div class="c-alert__content">
          <h4 class="c-alert__title">About Yourself</h4>
          <p><%= current_user.about %></p>
        </div>
      </div><!-- // .c-alert -->

      <nav class="c-tabs">
        <div class="c-tabs__list nav nav-tabs" id="myTab" role="tablist">
          <a class="c-tabs__link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Personal Information</a>
          <a class="c-tabs__link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Agreements</a>
<!--          <a class="c-tabs__link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Notes</a>-->
        </div>
        <div class="c-tabs__content tab-content" id="nav-tabContent">
          <div class="c-tabs__pane active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
            <div class="c-feed">
              <div class="c-feed__item">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Address</h6>
                  <p><%= current_user.address.present? ? current_user.address : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item c-feed__item--success">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">City</h6>
                  <p><%= current_user.city_name.present? ? current_user.city_name : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Country</h6>
                  <p><%= current_user.country_name.present? ? current_user.country_name : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item c-feed__item--fancy">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Department</h6>
                  <p><%= current_user.department_name.present? ? current_user.department_name : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item c-feed__item--danger">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Date of birth</h6>
                  <p><%= current_user.dob.present? ? current_user.dob : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item c-feed__item--warning">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Nationality</h6>
                  <p><%= current_user.nationality.present? ? current_user.nationality : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Nid</h6>
                  <p><%= current_user.nid.present? ? current_user.nid : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item c-feed__item--danger">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Occupation</h6>
                  <p><%= current_user.occupation.present? ? current_user.occupation : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item c-feed__item--warning">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Passport</h6>
                  <p><%= current_user.passport.present? ? current_user.passport : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Date of birth</h6>
                  <p><%= current_user.dob.present? ? current_user.dob : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Phone</h6>
                  <p><%= current_user.phone.present? ? current_user.phone : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Privacy Policy</h6>
                  <p><%= current_user.privacy_policy.present? ? current_user.privacy_policy : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item c-feed__item--danger">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Role</h6>
                  <p><%= current_user.role.present? ? current_user.role : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item c-feed__item--warning">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Refer code</h6>
                  <p><%= current_user.slug.present? ? current_user.slug : 'Na' %></p>
                </div>
              </div>
            </div>
          </div>

          <div class="c-tabs__pane" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
            <div class="c-feed">
              <div class="c-feed__item">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Consultancy</h6>
                  <p><%= current_user.consultancy.present? ? current_user.consultancy : 'Na' %></p>
                </div>
              </div>

              <div class="c-feed__item c-feed__item--success">
                <div class="c-feed__item-content">
                  <h6 class="u-text-small">Other Consultancy</h6>
                  <p><%= current_user.other_consultancy.present? ? current_user.other_consultancy : 'Na' %></p>
                </div>
              </div>
            </div>
          </div>
<!--          <div class="c-tabs__pane" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">-->
<!--            optio, laborum enim ipsum dolorum, voluptatem ducimus quam fuga, vero atque, error laboriosam odio provident eveniet n-->
<!--            emo reicienoptio, laborum enim ipsum dolorum, voluptatem ducimus quam fuga, vero atque, error laboriosam odio provident eveniet nemo reic-->
<!--            ien-->
<!--          </div>-->
        </div>
      </nav>
    </div>

    <div class="col-md-5">
      <div class="c-card">
        <div class="u-text-center">
          <div class="c-avatar c-avatar--large u-mb-small u-inline-flex">
            <%if current_user.image.present?  %>
              <img class="c-avatar__img" src="<%= current_user.image %>" alt="Avatar">
            <%else %>
              <img class="c-avatar__img" src="<%= asset_path('avatar.jpeg') %>" alt="Avatar">
            <%end%>
          </div>
            <h5> <%= current_user.full_name %> </h5>
          <p><%= current_user.occupation.present? ? current_user.occupation : 'Na' %></p>
        </div>

        <span class="c-divider u-mv-small"></span>

        <span class="c-text--subtitle">Email Address</span>
        <p class="u-mb-small u-text-large"><%= current_user.email.present? ? current_user.email : 'Na' %></p>

        <span class="c-text--subtitle">University</span>
        <p class="u-mb-small u-text-large"><%= current_user.university.present? ? current_user.university : 'Na' %></p>

        <span class="c-text--subtitle">Phone NUMBER</span>
        <p class="u-mb-small u-text-large"><%= current_user.phone.present? ? current_user.phone : 'Na' %></p>

        <span class="c-text--subtitle">Skype</span>
        <p class="u-mb-small u-text-large"><%= current_user.skype.present? ? current_user.skype : 'Na' %></p>

        <span class="c-text--subtitle">Whatsapp</span>
        <p class="u-mb-small u-text-large"><%= current_user.whatsapp.present? ? current_user.whatsapp : 'Na' %></p>

        <span class="c-text--subtitle">Social</span>
        <p class="u-mb-small u-text-large"><%= current_user.social.present? ? current_user.social : 'Na' %></p>

        <span class="c-text--subtitle u-block">Tags</span>

        <a class="c-badge c-badge--small c-badge--info u-mb-xsmall">
          <%= current_user.activities.present? ? current_user.activities : 'Na' %>
        </a>
        <a class="c-badge c-badge--small c-badge--info u-mb-xsmall">
          <%= current_user.comment.present? ? current_user.comment : 'Na' %>
        </a>
        <a class="c-badge c-badge--small c-badge--danger u-mb-xsmall">
          <%= current_user.community.present? ? current_user.community : 'Na' %>
        </a>

        <a class="c-badge c-badge--small c-badge--info u-mb-xsmall">
          <%= current_user.passport.present? ? current_user.passport : 'Na' %>
        </a>
        <a class="c-badge c-badge--small c-badge--danger u-mb-xsmall">
          <%= current_user.scholarship.present? ? current_user.scholarship : 'Na' %>
        </a>

      </div>
    </div>
  </div>
</div>


