<div class="c-card">
  <div class="u-text-center">
    <div class="c-avatar c-avatar--large u-mb-small u-inline-flex">
      <%if @user.image.present?  %>
        <img class="c-avatar__img" src="<%= @user.image_url %>" alt="Avatar">
      <%else %>
        <img class="c-avatar__img" src="<%= asset_path('avatar.jpeg') %>" alt="Avatar">
      <%end%>

    </div>
    <%if @user.first_name.present? || @user.last_name.present? %>

      <h5> <%= @user.full_name %> </h5>
    <%else %>
      <h5> Na</h5>
    <%end %>
    <p><%= @user.occupation.present? ? @user.occupation : 'Na' %></p>
  </div>

  <span class="c-divider u-mv-small"></span>

  <span class="c-text--subtitle">Email Address</span>
  <p class="u-mb-small u-text-large"><%= @user.email.present? ? @user.email : 'Na' %></p>

  <span class="c-text--subtitle">Phone NUMBER</span>
  <p class="u-mb-small u-text-large"><%= @user.phone.present? ? @user.phone : 'Na' %></p>

  <span class="c-text--subtitle">Address</span>
  <p class="u-mb-small u-text-large"><%= @user.address.present? ? @user.address : 'Na' %></p>

  <span class="c-text--subtitle u-block">Tags</span>
  <a class="c-badge c-badge--small c-badge--info u-mb-xsmall" href="user-profile.html#">Sketch</a>
  <a class="c-badge c-badge--small c-badge--info u-mb-xsmall" href="user-profile.html#">Photoshop</a>
  <a class="c-badge c-badge--small c-badge--danger u-mb-xsmall" href="user-profile.html#">HTML</a>
  <a class="c-badge c-badge--small c-badge--success u-mb-xsmall" href="user-profile.html#">CSS</a>
  <a class="c-badge c-badge--small c-badge--fancy u-mb-xsmall" href="user-profile.html#">Figma</a>
  <a class="c-badge c-badge--small c-badge--danger" href="user-profile.html#">AE</a>
</div>