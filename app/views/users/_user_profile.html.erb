<div class="c-card">
  <div class="u-text-center">
    <div class="c-avatar c-avatar--large u-mb-small u-inline-flex">
      <%if @user.image.present?  %>
        <img class="c-avatar__img" src="<%= @user.image %>" alt="Avatar">
      <%else %>
        <img class="c-avatar__img" src="<%= asset_path('avatar.jpeg') %>" alt="Avatar">
      <%end%>
    </div>
    <h5> <%= @user.full_name %> </h5>
    <p><%= @user.occupation.present? ? @user.occupation : 'Na' %></p>
  </div>

  <span class="c-divider u-mv-small"></span>

  <span class="c-text--subtitle">Email Address</span>
  <p class="u-mb-small u-text-large"><%= @user.email.present? ? @user.email : 'Na' %></p>

  <span class="c-text--subtitle">University</span>
  <p class="u-mb-small u-text-large"><%= @user.university.present? ? @user.university : 'Na' %></p>

  <span class="c-text--subtitle">Phone NUMBER</span>
  <p class="u-mb-small u-text-large"><%= @user.phone.present? ? @user.phone : 'Na' %></p>

  <span class="c-text--subtitle">Skype</span>
  <p class="u-mb-small u-text-large"><%= @user.skype.present? ? @user.skype : 'Na' %></p>

  <span class="c-text--subtitle">Whatsapp</span>
  <p class="u-mb-small u-text-large"><%= @user.whatsapp.present? ? @user.whatsapp : 'Na' %></p>

  <span class="c-text--subtitle">Social</span>
  <p class="u-mb-small u-text-large"><%= @user.social.present? ? @user.social : 'Na' %></p>

  <span class="c-text--subtitle u-block">Tags</span>

  <a class="c-badge c-badge--small c-badge--info u-mb-xsmall">
    <%= @user.activities.present? ? @user.activities : 'Na' %>
  </a>
  <a class="c-badge c-badge--small c-badge--info u-mb-xsmall">
    <%= @user.comment.present? ? @user.comment : 'Na' %>
  </a>
  <a class="c-badge c-badge--small c-badge--danger u-mb-xsmall">
    <%= @user.community.present? ? @user.community : 'Na' %>
  </a>

  <a class="c-badge c-badge--small c-badge--info u-mb-xsmall">
    <%= @user.passport.present? ? @user.passport : 'Na' %>
  </a>
  <a class="c-badge c-badge--small c-badge--danger u-mb-xsmall">
    <%= @user.scholarship.present? ? @user.scholarship : 'Na' %>
  </a>
</div>