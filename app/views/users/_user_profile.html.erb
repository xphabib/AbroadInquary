<div class="c-card">
  <div class="u-text-center">
    <div class="c-avatar c-avatar--large u-mb-small u-inline-flex">
      <%if @user.image.present?  %>
        <img class="c-avatar__img" src="<%= @user.image_url %>" alt="Avatar">
      <%else %>
        <img class="c-avatar__img" src="<%= asset_path('user.png') %>" alt="Avatar">
      <%end%>

    </div>
    <%if @user.first_name.present? || @user.last_name.present? %>

      <h5> <%= @user.full_name %> </h5>
    <%else %>
      <h5> Na</h5>
    <%end %>
    <p><%= @user.occupation.present? ? @user.occupation : 'Na' %></p>
  </div>

  <span class="c-divider u-mv-small"></span>

  <span class="c-text--subtitle">Email Address</span>
  <p class="u-mb-small u-text-large"><%= @user.email.present? ? @user.email : 'Na' %></p>

  <span class="c-text--subtitle">Phone NUMBER</span>
  <p class="u-mb-small u-text-large"><%= @user.phone.present? ? @user.phone : 'Na' %></p>

  <span class="c-text--subtitle">Address</span>
  <p class="u-mb-small u-text-large"><%= @user.address.present? ? @user.address : 'Na' %></p>


  <span class="c-text--subtitle">City</span>
  <p class="u-mb-small u-text-large"><%= @user.city_name.present? ? @user.city_name : 'Na' %></p>

  <span class="c-text--subtitle">Country</span>
  <p class="u-mb-small u-text-large"><%= @user.country_name.present? ? @user.country_name : 'Na' %></p>

  <span class="c-text--subtitle">Department</span>
  <p class="u-mb-small u-text-large"><%= @user.department_name.present? ? @user.department_name : 'Na' %></p>

  <span class="c-text--subtitle">Date of birth</span>
  <p class="u-mb-small u-text-large"><%= @user.dob.present? ? @user.dob : 'Na' %></p>

  <span class="c-text--subtitle">Nationality</span>
  <p class="u-mb-small u-text-large"><%= @user.nationality.present? ? @user.nationality : 'Na' %></p>

  <span class="c-text--subtitle">Nid</span>
  <p class="u-mb-small u-text-large"><%= @user.nid.present? ? @user.nid : 'Na' %></p>

  <span class="c-text--subtitle">Occupation</span>
  <p class="u-mb-small u-text-large"><%= @user.occupation.present? ? @user.occupation : 'Na' %></p>

  <span class="c-text--subtitle">Passport</span>
  <p class="u-mb-small u-text-large"><%= @user.passport.present? ? @user.passport : 'Na' %></p>

  <span class="c-text--subtitle">Date of birth</span>
  <p class="u-mb-small u-text-large"><%= @user.dob.present? ? @user.dob : 'Na' %></p>

  <span class="c-text--subtitle">Phone</span>
  <p class="u-mb-small u-text-large"><%= @user.phone.present? ? @user.phone : 'Na' %></p>

  <span class="c-text--subtitle">Pole</span>
  <p class="u-mb-small u-text-large"><%= @user.role.present? ? @user.role : 'Na' %></p>

  <span class="c-text--subtitle">Refer code</span>
  <p class="u-mb-small u-text-large"><%= @user.slug.present? ? @user.slug : 'Na' %></p>
</div>