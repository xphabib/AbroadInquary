<%= form_for @schedule do |f| %>

  <div class="row u-mb-medium">
    <div class="col-lg-6 u-mb-xsmall">
      <div class="c-field">
        <%= f.label :start_time, class: "c-field__label" %>
        <%= f.text_field :start_time, class: "c-input datetimepicker", placeholder: "start time" %>
      </div>
    </div>
    <div class="col-lg-6 u-mb-xsmall">
      <div class="c-field">
        <%= f.label :end_time, class: "c-field__label" %>
        <%= f.text_field :end_time, class: "c-input datetimepicker", placeholder: "end time" %>
      </div>
    </div>

    <div class="col-lg-6 u-mb-xsmall">
      <div class="c-field">
        <%= f.label :schedule_cost, class: "c-field__label" %>
        <%= f.text_field :schedule_cost, class: "c-input", placeholder: "schedule cost" %>
      </div>
    </div>

    <div class="col-lg-6 u-mb-xsmall">
      <div class="c-choice c-choice--checkbox " style="margin-top: 25px">
        <%= f.check_box :is_paid, class: "c-choice__input", id: "is_paid" %>
        <label class="c-choice__label" for="is_paid">Paid?</label>
      </div>
    </div>

    <% if current_user.head_admin? %>
      <div class="col-lg-6 u-mb-xsmall">
        <div class="c-field">
          <%= f.label :mentor, class: "c-field__label" %>
          <%= f.select :mentor_id, options_for_select(User.mentor.map{ |mentor| [mentor.full_name, mentor.id] }, :selected => f.object.mentor_id),{ include_blank: true }, {class: 'c-input'} %>
        </div>
      </div>
    <% end %>

    <div class="col-lg-12 u-mb-xsmall">
      <div class="c-choice c-choice--checkbox">
        <button class="c-btn"><%= submit %></button>
      </div>
    </div>
  </div>
<% end %>

