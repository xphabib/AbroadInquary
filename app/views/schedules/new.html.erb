<div class="row u-mt-xlarge">
  <div class="col-12">
    <h3 class="u-mb-small">New Schedule</h3>
  </div>
</div>
<!--
#  start_time    :datetime
#  end_time      :datetime
#  mentor_id     :integer
#  created_by    :string
#  user_id       :integer
#  status        :string
#  student_id    :integer
#  is_paid       :boolean
#  schedule_cost :float -->

<div class="row">
  <div class="col-12">
    <div class="row u-mb-medium">
      <div class="col-12">
        <div class="c-card">
            <%= form_for @schedule do |f| %>

              <div class="row u-mb-medium">
                <div class="col-lg-6 u-mb-xsmall">
                  <div class="c-field">
                    <%= f.label :start_time, class: "c-field__label" %>
                    <div class="c-badge c-badge--info">
                      <%= f.datetime_select :start_time, class: "c-input", placeholder: "start time" %>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 u-mb-xsmall">
                  <div class="c-field">
                    <%= f.label :end_time, class: "c-field__label" %>
                    <div class="c-badge c-badge--info">
                      <%= f.datetime_select :end_time, class: "c-input", placeholder: "end time" %>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 u-mb-xsmall">
                  <div class="c-choice c-choice--checkbox" style="margin-top: 25px">
                    <input name= "schedule[is_paid]" class="c-choice__input" id="is_paid" type="checkbox">
                    <label class="c-choice__label" for="is_paid">Paid?</label>
                  </div>
                </div>
                <div class="col-lg-5 u-mb-xsmall">
                  <div class="c-field">
                    <%= f.label :schedule_cost, class: "c-field__label" %>
                    <%= f.text_field :schedule_cost, class: "c-input", placeholder: "schedule cost" %>
                  </div>
                </div>
                <div class="col-lg-12 u-mb-xsmall">
                  <div class="c-choice c-choice--checkbox">
                    <button class="c-btn">Submit</button>
                  </div>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>