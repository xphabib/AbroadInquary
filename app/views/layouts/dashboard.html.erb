    <%= javascript_include_tag 'toastr', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'dashboard.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'neat.min', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="o-page">
      <%= render 'shared/dashboard/sidebar' unless controller.controller_name == 'users' && controller.action_name == 'request_for_new_mentorship'  %>

      <main class="<%= header_class_define %>">
        <%= render 'shared/dashboard/header' unless controller.controller_name == 'users' && controller.action_name == 'request_for_new_mentorship' %>
        <%= yield :header_for_mentor %>
        <div class="container">
          <%= yield %>

          <%= render 'shared/dashboard/footer' %>
        </div>
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        $(".datetimepicker").flatpickr(
            {
                enableTime: true,
                dateFormat: "d-m-Y H:i",
            }
        );
    </script>

    <!-- Main JavaScript -->
    <%#= javascript_include_tag 'neat.min', 'data-turbolinks-track': 'reload' %>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-88739867-5"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }
        gtag('js', new Date());

        gtag('config', 'UA-88739867-5');

    </script>
  <%= custom_bootstrap_flash %>
  </body>
</html>
