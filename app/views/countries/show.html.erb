<!--=======Page Heading
    ==================================-->
<section class="page-heading-section page-heading-one before-bg bg-image" style="background-image: url(<%= asset_path('header/p-header3.jpg') %>);">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="page-heading">
          <h2 class="page-name text-capitalize">
            <%= @country.name %>
          </h2>
          <!--          <a href="#" class="btn btn-default btn-primary">back to home</a>-->
          <%= link_to "Back to Home", root_path, class: "btn btn-default btn-primary" %>
        </div><!--/.page-heading-->
      </div><!--/.col-md-12-->
    </div><!--/.row-->
  </div><!--/.container-->
</section><!--/.page-heading-area-->


<div class="courses-page page-wrapper">
  <%#= render 'search_area' %>

  <!--=======Courses Page Content
  ==================================-->
  <div class="courses-page-content">
    <div class="container">
      <div class="row">
        <!--        <div class="col-lg-3 col-md-12">-->
        <%#= render 'filter_area' %>
        <!--        </div>-->

        <div class="col-lg-12">
          <%= raw @country.description %>
        </div>
        <div class="col-lg-12">
          <hr>
          <h3>Mentors</h3>
          <% unless @mentors.present? %>
            <h5>No mentor available this country</h5>
          <% end %>
          <div class="courses-page-content">
            <div class="courses-content">
              <div class="row">
                <% @mentors.each do |mentor| %>
                  <div class="col-lg-4 col-md-4 col-sm-12">
                    <!--Single Course Item Start-->
                    <div class="single-course-item border-radius">
                      <div class="course-content" style="border-top: 1px solid #d7d7d7; border-radius: 5px 5px 5px 5px;">
                        <div class="trainer-profile clearfix">
                          <%= image_tag mentor.image_url, class: "rounded-circle", alt: "img" if mentor.image.present?%>
                          <div class="trainer-info">
                            <h3><%= mentor.full_name %></h3>
                            <h3>Program: <%= mentor.occupation %></h3>
                            <p>City: <%= mentor.city_name %></p>
                            <p>University: <%= mentor.university %></p>
                          </div>
                          <div class="course-cat text-capitalize text-right">
                            <!--                            <a href="courses.html#">Schedules</a>-->
                            <%= link_to user_path(mentor) do %>
                              Schedules
                            <% end %>
                          </div>
                        </div><!--/.trainer-profile-->
                      </div><!--/.course-content-->
                    </div><!--/.single-course-item-end-->
                  </div><!--/.col-lg-6-->
                <% end %>
              </div>
              <!--              <div class="row">-->
              <!--                <div class="col-md-12">-->
              <!--                  <div class="courses-navigation default-pager text-center">-->
              <%#= link_to path_to_prev_page @mentors do %>
              <!--                      <i class="fa fa-angle-left"></i>-->
              <%# end %>
              <%#= link_to path_to_next_page @mentors do %>
              <!--                      <i class="fa fa-angle-right"></i>-->
              <%# end %>
              <!--                  </div>-->
              <!--                </div>-->
              <!--              </div>-->
            </div>
          </div>
        </div>
      </div><!--/.row-->
    </div><!--/.container-->
  </div><!--/.courses-page-content-->
</div><!--/.courses-page-->
