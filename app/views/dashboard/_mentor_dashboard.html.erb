<div class="row">
  <div class="col-md-6 col-xl-3 text-center">
    <%= link_to new_schedule_path do %>
      <div class="c-card">
      <span class="c-icon c-icon--info u-mb-small">
        <i class="feather icon-activity"></i>
      </span>
        <h3 class="c-text--subtitle">Create Schedule</h3>
      </div>
    <% end %>
  </div>

  <div class="col-md-6 col-xl-3 text-center">
    <%= link_to new_student_application_path do %>
      <div class="c-card">
      <span class="c-icon c-icon--danger u-mb-small">
        <i class="feather icon-shopping-cart"></i>
      </span>
        <h3 class="c-text--subtitle">Make Application</h3>
      </div>
    <% end %>
  </div>

  <div class="col-md-6 col-xl-3 text-center">
    <%= link_to schedules_path do %>
      <div class="c-card">
      <span class="c-icon c-icon--success u-mb-small">
        <i class="feather icon-users"></i>
      </span>
        <h3 class="c-text--subtitle">Your Schedules</h3>
      </div>
    <% end %>
  </div>

  <div class="col-md-6 col-xl-3 text-center">
    <%= link_to booked_users_schedules_path do %>
      <div class="c-card">
      <span class="c-icon c-icon--warning u-mb-small">
        <i class="feather icon-zap"></i>
      </span>
        <h3 class="c-text--subtitle">Booked Users</h3>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="c-card u-ph-zero u-pb-zero text-center">
      <div class="u-ph-medium">
        <h4>Your Total Schedules</h4>
        <span class="u-h1"><%= @mentor_total_schedules %></span>
      </div>
      <div class="u-p-medium">
        <div class="c-chart">
          <div class="sales-chart"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="c-card u-ph-zero u-pb-zero text-center">
      <div class="u-ph-medium">
        <h4>Your Booked Schedule</h4>
        <span class="u-h1"><%= @mentor_total_booked_schedules %></span>
      </div>
      <div class="u-p-medium">
        <div class="c-chart">
          <div class="payouts-chart"></div>
        </div>
      </div>
    </div>
  </div>
</div>
