<!--====Blog Page
====================================-->
<div class="blog-page page-wrapper bg-gray s-pd4">
  <div class="blog-page-content">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-12">
          <div class="blog-contect-area blog-grid">
            <div class="row">
              <!-- Start single blog -->
              <% if @blogs.present?  %>
                <% @blogs.each do |blog| %>
                  <div class="col-md-6 col-sm-12">
                    <div class="blog">
                      <div class="blog-thumb">
                        <%= image_tag image_url(blog.image), alt: "blog image", style: 'height: 200px' %>
                      </div>
                      <div class="blog-details">
                        <div class="blog-time">
                          <span class="blog-date"><%= blog.created_at.strftime("%B %d %Y  %I:%M %P") %> By <a href="#"> <%= blog.admin_user.full_name %> </a></span>
                          <span class="blog__category">Category <a href="#"><%= blog.category.name %></a></span>
                        </div>
                        <div class="blog-title">
                          <h3>
                            <%= link_to blog_path(blog.id) do%>
                              <!--                          9 Ridiculous Rules About Tweets -->
                              <%= truncate(blog.title, length: 30) %>
                            <% end %>
                          </h3>

                        </div>
                        <p> <%= truncate(blog.short_body, length: 80)%></p>
                        <div class="blog-more">
                          <%= link_to 'Read More', blog_path(blog.id), class: "btn btn-default" %>
                          <span class="blog-comments"><a href="#"><%= blog.comments.count %> comments</a></span>
                        </div>
                      </div>
                    </div>
                  </div>
                <%end %>
              <%else %>
                <div style="text-align: center; font-size: medium"> No Blog Found </div>
              <%end %>
              <!-- End single blog -->
            </div><!--/.row-->
          </div><!--/.blog-contect-area-->
<!--          <div class="pagination blog-pagination text-center">-->
<!--            <ul class="list-unstyled">-->
<!--              <li><a href="#"><i class="fa fa-angle-left"></i></a></li>-->
<!--              <li class="active"><a href="#">1</a></li>-->
<!--              <li><a href="#">2</a></li>-->
<!--              <li><a href="#">3</a></li>-->
<!--              <li><a href="#">4</a></li>-->
<!--              <li><a href="#">5</a></li>-->
<!--              <li><a href="#"><i class="fa fa-angle-right"></i></a></li>-->
<!--            </ul>-->
<!--          </div>/.blog-pagination-->
        </div><!--/.col-lg-8-->

        <div class="col-lg-4 col-md-12">
          <div class="blog-sidebar">
            <aside class="widget widget-category">
              <h2>Categories</h2>
              <ul class="list-unstyled">
                <% if @categories.present?  %>
                  <% @categories.each do |category| %>
                    <li>
                      <%= link_to category.name, '#' %>
                    </li>
                  <%end %>
                <%else %>
                  <div style="text-align: center; font-size: medium"> Not  Found </div>
                <%end %>
              </ul>
            </aside><!--/.widget-category-->
            <aside class="widget widget-recent-post">
              <h2>Recent post</h2>
              <% @resent_posts.each do |post| %>
                <div class="sidebar__single-post">
                  <div class="single-post__thumb">
                    <a href="<%=blog_path(post.id)%>">
                      <%= image_tag image_url(post.image),size: 60, alt: 'blog thumb' %>
                    </a>
                  </div>
                  <div class="single-post__details">
                    <h5><a href="<%=blog_path(post.id) %>"><%= post.title %></a></h5>
                    <div class="single-post__more">
                      <span class="date"><span class="blog__date"><%= post.created_at.strftime("%B %d %Y   %I:%M %P") %> By <a href="#"><%= post.admin_user.full_name.present? ? post.admin_user.full_name : "Na" %></a></span></span>
                    </div>
                  </div>
                </div>
              <%end %>
            </aside><!--/.widget-recent-post-->
          </div><!--/.blog-sidebar-->
        </div><!--/.col-lg-4-->
      </div><!--/.row-->
    </div><!--/.container-->
  </div><!--/.blog-page-content-->
</div><!--/.blog-page-->
